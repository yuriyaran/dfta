{{page-title "Dealfront"}}

<NotificationContainer @position="top-right" @zindex="9999" />

<GithubForm
  @orgName={{this.orgName}}
  @orgsLoading={{this.getOrgRepos.isRunning}}
  @onSubmit={{this.getOrgRepos.perform}}
/>

<Repos
  @repos={{this.repositories}}
  @org={{this.orgName}}
  @orgsLoading={{this.getOrgRepos.isRunning}}
  @branchesLoading={{this.getRepoBranches.isRunning}}
  @onRowSelect={{this.getRepoBranches.perform}}
/>

{{outlet}}